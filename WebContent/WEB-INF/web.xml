<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>happypets</display-name>
  <welcome-file-list>
    <welcome-file>mascotaMesIndex</welcome-file>
   
  </welcome-file-list>
<servlet>
<servlet-name>MascotaMesIndexServlet</servlet-name>
<servlet-class>com.happypets.web.controller.MascotaMesIndexServlet</servlet-class>
</servlet>


<servlet-mapping>
<servlet-name>MascotaMesIndexServlet</servlet-name>
<url-pattern>/mascotaMesIndex</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>UsuarioServlet</servlet-name>
<servlet-class>com.happypets.web.controller.UsuarioServlet</servlet-class>
</servlet>


<servlet-mapping>
<servlet-name>UsuarioServlet</servlet-name>
<url-pattern>/usuario</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>ClienteServlet</servlet-name>
<servlet-class>com.happypets.web.controller.ClienteServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>ClienteServlet</servlet-name>
<url-pattern>/cliente</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>CuidadorServlet</servlet-name>
<servlet-class>com.happypets.web.controller.CuidadorServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>CuidadorServlet</servlet-name>
<url-pattern>/cuidador</url-pattern>
</servlet-mapping>

<filter>
<filter-name>CuidadorSesionFilter</filter-name>
<filter-class>com.happypets.web.filters.CuidadorSesionFilter</filter-class>
</filter>

<filter-mapping>
<filter-name>CuidadorSesionFilter</filter-name>
<url-pattern>/html/cuidador/cuidador-historial.jsp</url-pattern>
</filter-mapping>

<filter>
<filter-name>ClienteSesionFilter</filter-name>
<filter-class>com.happypets.web.filters.ClienteSesionFilter</filter-class>
</filter>

<filter-mapping>
<filter-name>ClienteSesionFilter</filter-name>
<url-pattern>/html/cliente/cliente-puntuar.jsp</url-pattern>
<url-pattern>/html/cliente/cliente-historial.jsp</url-pattern>
<url-pattern>/html/cliente/cliente-editar-perfil.jsp</url-pattern>
<url-pattern>/html/contrato/*</url-pattern>
<url-pattern>/html/puntuacion/*</url-pattern>
</filter-mapping>

<filter>
<filter-name>IniciarSesionFilter</filter-name>
<filter-class>com.happypets.web.filters.IniciarSesionFilter</filter-class>
</filter>

<filter-mapping>
<filter-name>IniciarSesionFilter</filter-name>
<url-pattern>/html/usuario/usuario-login.jsp</url-pattern>
</filter-mapping>

<error-page>
		<error-code>404</error-code>
		<location>/html/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/html/error/500.jsp</location>
	</error-page>
</web-app>